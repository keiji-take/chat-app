

<div class="message">
  <div class="upper-comment">
    <div class="comment-user">
      <%= message.user.name %>
    </div>
    <div class="create-time">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="comment">
      <%= message.content %>
  </div>
  <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</div>