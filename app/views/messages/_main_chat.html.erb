<div class="chat-header">
  <div class="header-box">
    <div class="title">
    <a href="#">Hogehoge</a>
    </div>
    <div class="end-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat-main">
  <div class="messages">
    <div class="message">
      <div class="upper-comment">
        <div class="comment-user">
          Tom
        </div>
        <div class="create-time">
          2020/3/31(Wed) 12:43:30 
        </div>
      </div>
      <div class="comment">
        Hello
      </div>
    </div>
    <div class="message">
      <div class="upper-comment">
        <div class="comment-user">
          Kevin
        </div>
        <div class="create-time">
          2020/3/31(Wed) 12:44:30 
        </div>
      </div>
      <div class="comment">
        Hi
      </div>
    </div>
  </div>
</div>


<%= form_with model: [@room, @message], class: 'chat-box', local: true do |f| %>
  <div class="comment-box">
    <%= f.text_field :content, class: 'commit', placeholder: 'type a message' %>
    <label class="comment-image">
      <span class="image-file">image</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit 'SEND', class: 'send' %>
<% end %>

